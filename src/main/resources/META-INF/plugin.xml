<idea-plugin>
    <id>com.github.chetic.vision</id>
    <name>vision</name>
    <vendor>chetic</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.chetic.vision.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.chetic.vision.services.MyProjectService"/>
        <codeInsight.inlayProvider language="JAVA" implementationClass="com.github.chetic.vision.extensions.NumOfUsagesInlayProvider"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.chetic.vision.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
